{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["es2015", "es2016", "es2017"],
    "outDir": "./lib",
    "module": "CommonJS",
    "baseUrl": "./src",
    "noImplicitAny": true,
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "src/*": [ "*" ]
    }
  },
  "include": [
    "./src/**/*", 
    "./test/**/*"
  ],
}
